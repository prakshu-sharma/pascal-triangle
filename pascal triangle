n=int(input('enter height'))
a=0
b=0
c=0
d=0
for a in range(n):
 if(a==0):
  print(str(1).center(50))
 if(a!=0):
  for b in range (a+1):
   c=a
   d=b
   def com(c,d):
    if(b==0):
     f=1
    else:
     f=1
     while c>0 and d>0:
      f=f*(c/d)
      f=int(f)
      c=c-1
      d=d-1
    return f
   x=com(c,d)
   x=str(x)
   print(x.center(100//(n+1)),end='     ') 
   
   
   